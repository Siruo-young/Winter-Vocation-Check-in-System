<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.winter_vacation_checkin.mapper.LaUserMapper">

    <resultMap id="BaseResultMap" type="com.example.winter_vacation_checkin.domain.LaUser">
            <id property="id" column="id" />
            <result property="sn" column="sn" />
            <result property="avatar" column="avatar" />
            <result property="realName" column="real_name" />
            <result property="nickname" column="nickname" />
            <result property="username" column="username" />
            <result property="password" column="password" />
            <result property="mobile" column="mobile" />
            <result property="lastLoginTime" column="last_login_time" />
            <result property="createTime" column="create_time" />
            <result property="updateTime" column="update_time" />
            <result property="deleteTime" column="delete_time" />
    </resultMap>

    <sql id="Base_Column_List">
        id,sn,avatar,real_name,nickname,username,
        password,mobile,last_login_time,create_time,update_time,
        delete_time
    </sql>
    <update id="deleteUser">
        update la_user set delete_time = now() where id = #{id}
    </update>
    <select id="listUser" resultType="com.example.winter_vacation_checkin.vo.LaUserDetailVo">
        select * from la_user where delete_time = "1970-01-01 00:00:00"
    </select>

</mapper>
